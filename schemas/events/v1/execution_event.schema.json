{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://northroot.dev/schemas/events/v1/execution_event.schema.json",
    "title": "Northroot ExecutionEvent (v1)",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "event_id",
        "event_type",
        "event_version",
        "occurred_at",
        "principal_id",
        "canonical_profile_id",
        "intents",
        "auth_event_id",
        "tool_name",
        "meter_used",
        "outcome"
    ],
    "properties": {
        "event_id": {
            "description": "sha256('northroot:event:v1\\0' || canonical_bytes(self))",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "event_type": {
            "const": "execution"
        },
        "event_version": {
            "const": "1"
        },
        "prev_event_id": {
            "description": "Optional hash-chain pointer to prior event_id for append-only integrity.",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "occurred_at": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
        },
        "principal_id": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/PrincipalID"
        },
        "canonical_profile_id": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ProfileID"
        },
        "intents": {
            "$ref": "#/$defs/IntentAnchors"
        },
        "auth_event_id": {
            "description": "Authorization event_id that permitted/denied the execution attempt.",
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/EventID"
        },
        "tool_name": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ToolName"
        },
        "started_at": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
        },
        "ended_at": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Timestamp"
        },
        "meter_used": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/Meter"
            },
            "maxItems": 64
        },
        "outcome": {
            "$ref": "#/$defs/Outcome"
        },
        "error_code": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64,
            "pattern": "^[A-Z0-9_]+$"
        },
        "output_digest": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Digest"
        },
        "output_ref": {
            "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ContentRef"
        },
        "resources_touched": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/ResourceRef"
            },
            "maxItems": 256
        }
    },
    "$defs": {
        "Outcome": {
            "type": "string",
            "enum": [
                "success",
                "failure"
            ]
        },
        "Meter": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "unit",
                "amount"
            ],
            "properties": {
                "unit": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 64,
                    "pattern": "^[a-z][a-z0-9_.-]*$"
                },
                "amount": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Quantity"
                }
            }
        },
        "ResourceRef": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "kind",
                "reference"
            ],
            "properties": {
                "kind": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 64,
                    "pattern": "^[a-z][a-z0-9_.-]*$"
                },
                "reference": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 512
                }
            }
        },
        "IntentAnchors": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "intent_digest"
            ],
            "properties": {
                "intent_digest": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Digest"
                },
                "intent_ref": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/ContentRef"
                },
                "user_intent_digest": {
                    "$ref": "https://northroot.dev/schemas/canonical.json#/$defs/Digest"
                }
            }
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "outcome": {
                        "const": "failure"
                    }
                },
                "required": [
                    "outcome"
                ]
            },
            "then": {
                "required": [
                    "error_code"
                ]
            }
        }
    ]
}